        h2.discount__title.
          #[span = 'Секреты продуктивной работы']
            за компьтером
        p.discount__text
        .discount__recomendations


      form(method='post', action='', id='').news-subscribe
        itput(type='type').news-subscribe__input
        itput(type='type').news-subscribe__input
